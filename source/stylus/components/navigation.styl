.search
  &:before
    icon('iconSearch')
    color $cWhite
    position absolute
    right 0
    top 41px
    font-size s(16,14)
.nav
  font-size: s(14,16)
  font-weight: 500
  position: absolute
  top: s(50,14)
  max-width: s(1240,14)
  margin: 0 auto
  right: 0
  left: 0
  z-index: 20
  color: $cWhite
  &__logo
    position: absolute
    left 3em
    top 9px
  &__container
    display flex
    flex-direction row
    align-items center
    position relative
  &__bloc-link
    margin-right s(50,16)
  &__button
    top: -4em
    right: s(20,16)
    width: s(35,16)
    height: s(80,16)
    display none
  &__button-wrap
    position: absolute
    top: 30%
    right: 5%
  &__icon
    position: relative
    width: s(35,16)
    height: s(45,16)
    margin: s(5,16) auto
    cursor: pointer
    transition: .5s ease-in-out
    transform: rotate(0deg)
    & span
      display: block;
      position: absolute;
      height: s(5,20)
      width: 100%;
      background: $black
      border-radius: s(9,16)
      opacity: 1;
      left: 0;
      transform: rotate(0deg);
      transition: .25s ease-in-out;
  &__icon span:nth-child(1)
    top: s(8,16)
  &__icon span:nth-child(2)
    top: s(18,16)
  &__icon span:nth-child(3)
    top s(18,16)
  &__icon span:nth-child(4)
    top: s(28,16)
  &__icon span
    position: absolute
    left: 0
    display: block
    width: 100%
    height: s(4,16)
    transition: .25s ease-in-out
    transform: rotate(0deg)
    opacity: 1
    border-radius: s(9,16)
    background: $cWhite

    .with-menu
    .nav
      &__bloc
        height s(610,16)
        transition height .5s ease
      &__link
        padding-top s(5,16)
.menu-unfolded
  .nav
    &__icon span:nth-child(1)
      top: s(18,16)
      width: 0%
      left: 50%
    &__icon span:nth-child(2)
      transform: rotate(45deg)
    &__icon span:nth-child(3)
      transform: rotate(-45deg)
    &__icon span:nth-child(4)
      top: s(18,16)
      width: 0%
      left: 50%

.menu
  &__item
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
    & a
      position relative
      display inline-block
      padding s(10,16)
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        left 10px
        height 1px
        transition width.3s ease-in-out
        background-color $cWhite
      &:hover,
      &:focus-within
        &:before
          width 20%
  &__item-dropdown
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
  &__item-link
    position relative
    display inline-block
    padding s(10,16) s(10,16) s(30,16)
    margin: 0 0 -1px 0
    &:after
      icon('iconArrow')
      font-size s(8,14)
      margin-left s(5,8)
      display inline-block
      transition .3s ease-in-out

.subnav
  position absolute
  padding s(10,14) s(20,14)
  background-color $cWhite
  border-radius 10px
  opacity 0
  visibility hidden
  transition: .5s ease-in-out
  left: 0
  display none
  min-width 200px
  &:before
    content ''
    position absolute
    left: 20px
    right: 0
    top -11px
    width: 0
    height: 0
    border-style: solid
    border-width: 0 9.5px 11px 9.5px
    border-color: transparent transparent $cWhite transparent
    transform:rotate(360deg)
    border-style: inset
  &__li
    width 100%
    color $cBlue
    padding s(10,16) 0
    position relative
    & a
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        left 0
        height 1px
        transition width.3s ease-in-out
        background-color $cBlue
      &:hover,
      &:focus-within
        &:before
          width 20%

li:focus-within a {
  outline: none;
}

ul li:hover > ul,
ul li:focus-within > ul,
ul li ul:hover,
ul li ul:focus {
  visibility: visible;
  opacity: 1;
  display: block;
}


@media screen and (max-width: 1300px)
  .nav
    padding 0 s(20,16)

@media screen and (max-width: 1024px)
  .search
    display none
  .menu
    display none
  .nav
    &__button
      display inline-block
      position: absolute
      top: s(-30,16)
      text-align: right
      cursor pointer

@media screen and (max-width: 500px)
  .nav
    &__bloc-link
      & img
        width 75%








