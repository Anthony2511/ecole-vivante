.search
  &:before
    icon('iconSearch')
    color $cWhite
    position absolute
    right 0
    top 41px
    font-size s(16,14)
.nav
  font-size: s(14,16)
  font-weight: 500
  position: absolute
  top: s(50,14)
  max-width: s(1240,14)
  margin: 0 auto
  right: 0
  left: 0
  z-index: 20
  color: $cWhite
  &__logo
    position: absolute
    left 3em
    top 9px
  &__container
    display flex
    flex-direction row
    align-items center
    position relative
  &__bloc-link
    margin-right s(50,16)
.menu-button
  display none


.menu
  &__item
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
    & a
      position relative
      display inline-block
      padding s(10,16)
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        left 10px
        height 1px
        transition width.3s ease-in-out
        background-color $cWhite
      &:hover,
      &:focus-within
        &:before
          width 20%
  &__item-dropdown
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
  &__item-link
    position relative
    display inline-block
    padding s(10,16) s(10,16) s(30,16)
    margin: 0 0 -1px 0
    &:after
      icon('iconArrow')
      font-size s(8,14)
      margin-left s(5,8)
      display inline-block
      transition .3s ease-in-out

.subnav
  position absolute
  padding s(10,14) s(20,14)
  background-color $cWhite
  border-radius 10px
  opacity 0
  visibility hidden
  transition: .5s ease-in-out
  left: 0
  display none
  min-width 200px
  &:before
    content ''
    position absolute
    left: 20px
    right: 0
    top -11px
    width: 0
    height: 0
    border-style: solid
    border-width: 0 9.5px 11px 9.5px
    border-color: transparent transparent $cWhite transparent
    transform:rotate(360deg)
    border-style: inset
  &__li
    width 100%
    color $cBlue
    padding s(10,16) 0
    position relative
    & a
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        left 0
        height 1px
        transition width.3s ease-in-out
        background-color $cBlue
      &:hover,
      &:focus-within
        &:before
          width 20%







li:focus-within a {
  outline: none;
}

ul li:hover > ul,
ul li:focus-within > ul,
ul li ul:hover,
ul li ul:focus {
  visibility: visible;
  opacity: 1;
  display: block;
}








