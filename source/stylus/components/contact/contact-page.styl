.contact-page
  padding s(50,16) 0
  &__container
    background-color $cWhite
    display flex
    flex-direction row
    justify-content space-between
    margin s(50,16) 0
    padding s(30,16)
    border-radius 10px
  &__bloc
    width 50%
  &__logo
    margin-bottom s(50,16)
    & img
      width 25%
  &__list
    color $cBlue
  &__list + &__list
    margin-top s(30,16)
  &__item
    line-height 1.6
    &--tel
      &:before
        icon('iconUser')
        margin-right s(10,16)
    &--mail
      &:before
        icon('iconUser')
        margin-right s(10,16)
  &__form-label
    display block
    color $cBlue
    font-weight: 500
  &__form-input
    background-color $cLightGrey
    width 100%
    padding s(10,16) s(20,16)
    border-radius 10px
    margin-top s(10,16)
    border 1px solid transparent
    transition .3s ease-in-out
    &:hover,
    &:focus
      border 1px solid $cBlue
      transition .3s ease-in-out
  &__form-champ
    margin-bottom s(30,16)
  &__form-required
    font-style italic
    color $cBlue
    margin-bottom s(30,16)

.textarea
  resize none
