.search
  &:before
    icon('iconSearch')
    color $cWhite
    position absolute
    right 0
    top 8px
    font-size s(16,14)
.nav
  font-size: s(14,16)
  font-weight: 500
  position: absolute
  top: s(50,14)
  max-width: s(1240,14)
  margin: 0 auto
  right: 0
  left: 0
  z-index: 20
  color: $cWhite
  &__logo
    position: absolute
    left 3em
    top 9px
  &__container
    display flex
    flex-direction row
    justify-content: space-between
    width 100%
  &__flex
    display flex
    flex-direction row
    align-items center
  &__container
    position relative
  &__bloc-link
    margin-right s(50,16)
  &__button
    top: -4em
    right: s(20,16)
    width: s(35,16)
    height: s(80,16)
    display none
  &__button-wrap
    position: absolute
    top: 30%
    right: 5%
  &__icon
    position: relative
    width: s(35,16)
    height: s(45,16)
    margin: s(5,16) auto
    cursor: pointer
    transition: .5s ease-in-out
    transform: rotate(0deg)
    & span
      display: block;
      position: absolute;
      height: s(5,20)
      width: 100%;
      background: $black
      border-radius: s(9,16)
      opacity: 1;
      left: 0;
      transform: rotate(0deg);
      transition: .25s ease-in-out;
  &__icon span:nth-child(1)
    top: s(8,16)
  &__icon span:nth-child(2)
    top: s(18,16)
  &__icon span:nth-child(3)
    top s(18,16)
  &__icon span:nth-child(4)
    top: s(28,16)
  &__icon span
    position: absolute
    left: 0
    display: block
    width: 100%
    height: s(4,16)
    transition: .25s ease-in-out
    transform: rotate(0deg)
    opacity: 1
    border-radius: s(9,16)
    background: $cWhite

.with-menu
  .nav
    &__container
      height 100%
      transition height .5s ease
.menu-unfolded
  .nav
    &__icon span:nth-child(1)
      top: s(18,16)
      width: 0%
      left: 50%
    &__icon span:nth-child(2)
      transform: rotate(45deg)
    &__icon span:nth-child(3)
      transform: rotate(-45deg)
    &__icon span:nth-child(4)
      top: s(18,16)
      width: 0%
      left: 50%

.menu
  &__item
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
    & a
      position relative
      display inline-block
      padding s(10,16)
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        left 10px
        height 2px
        transition width.3s ease-in-out
        background-color $cWhite
      &:hover,
      &:focus-within
        &:before
          width 20%
  &__active
    & a
      position relative
      display inline-block
      padding s(10,16)
      &:before
        content ''
        position absolute
        top calc(100%)
        width 20%
        left 10px
        height 2px
        transition width.3s ease-in-out
        background-color $cYellow
  &__item-dropdown
    list-style none
    display inline-block
    padding 0
    margin 0
    position relative
  &__item-link
    position relative
    display inline-block
    padding s(10,16) s(10,16) s(30,16)
    margin: 0 0 -1px 0
    &:after
      icon('iconArrow')
      font-size s(8,14)
      margin-left s(5,8)
      display inline-block
      transition .3s ease-in-out

.subnav
  position absolute
  padding s(10,14) s(20,14)
  background-color $cWhite
  border-radius 10px
  opacity 0
  visibility hidden
  transition: .5s ease-in-out
  left: 0
  display none
  min-width 200px
  &:before
    content ''
    position absolute
    left: 20px
    right: 0
    top -11px
    width: 0
    height: 0
    border-style: solid
    border-width: 0 9.5px 11px 9.5px
    border-color: transparent transparent $cWhite transparent
    transform:rotate(360deg)
    border-style: inset
  &__li
    width 100%
    color $cBlue
    padding s(10,16) 0
    position relative
    & a
      &:before
        content ''
        position absolute
        top calc(100%)
        width 0
        height 2px
        transition width.3s ease-in-out
        background-color $cBlue
      &:hover,
      &:focus-within
        &:before
          width 20%

li:focus-within a {
  outline: none;
}

ul li:hover > ul,
ul li:focus-within > ul,
ul li ul:checked,
ul li ul:focus
  visibility: visible;
  opacity: 1;
  display: block;



@media screen and (max-width: 1300px)
  .nav
    padding 0 s(20,16)

@media screen and (max-width: 1100px)
  .nav
    font-size s(12,16)

@media screen and (max-width: 1024px)
  .search
    display none
  .subnav
    display none
    padding 0
    position static
    border-radius 0
    background-color $cBlue
    &:before
      content none
    & li
      color $cWhite
      &:hover
        background-color $cWhite
        color $cBlue
      & a
        width 100%
        display block
        &:before
          content none
  .nav
    padding 0
    font-size s(16,16)
    &__button
      display inline-block
      position: absolute
      z-index 50
      top: s(-5,16)
      text-align: right
      cursor pointer
    &__container
      margin-top s(75,22)
      height 0
      padding 0
      overflow: hidden
      transition .5s height ease
    &__bloc-link
      display block
      padding s(20,16) 0 0 s(20,16)
    &__flex
      display inherit

  .menu
    width 100%
    text-align center
    &__item
      display block
      transition .3s ease-in-out
      &:hover
        background-color $cWhite
        color $cBlue
        transition .3s ease-in-out
      & a
        &:before
          content none
    &__link
      width 100%
      height 100%
    &__item-dropdown
      display: block
    &__item:hover .open
    &__item .open
      transition .5s all ease
      transition-property height, visibility, opacity
      height s(90,22)
      opacity 1
    &__item .unfolded:after
      transition .5s transform ease
      transform rotate(0deg)
      top s(12,22)
  .with-menu
    .nav
      &__flex
        background-color: $cDarkBlue
        padding-bottom s(30,16)
    .header
      &__bg
        background none
        &:before
          background-color: alpha($cDarkBlue,1)
    .header-two
      background none
      &:before
        background-color: alpha($cDarkBlue,1)








