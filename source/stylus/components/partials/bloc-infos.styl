.infos
  padding s(50,16) 0
  position relative
  &__white
    background-color $cWhite
  &__title
    font-size s(35,16)
    color $cBlue
    text-align center
    font-weight 600
    font-family 'firasans'
  &__bg
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    width 100%
    height 100%
    transform skewY(3deg)
    transform-origin top right
    background-color $cWhite
    z-index -1

@media screen and (max-width: 768px)
  .infos
    &__title
      font-size s(25,16)