.button-yellow
    background-color: $cYellow
    color: $cBlue
    padding: s(10,16) s(40,16)
    border-radius: 10px
    font-weight: 500
    display inline-block
    border 1px solid transparent
    transition .3s ease-in-out
    &:hover
        background-color $cWhite
        border 1px solid $cBlue
        transition .3s ease-in-out

.button-white
    background-color: $cWhite
    color: $cBlue
    border 1px solid $cBlue
    padding: s(10,16) s(40,16)
    border-radius: 10px
    font-weight: 500
    display inline-block
    position relative
    z-index 20
    transition .3s ease-in-out
    &:hover
        background-color $cYellow
        border 1px solid transparent
        transition .3s ease-in-out

.button-center
    display flex
    justify-content center
    max-width 27.5%
    margin s(50,16) auto 0

@media screen and (max-width: 768px)
    .button-center
        max-width 35%

@media screen and (max-width: 600px)
    .button-center
        max-width 45%

@media screen and (max-width: 475px)
    .button-center
        max-width 60%

@media screen and (max-width: 375px)
    .button-center
        max-width 80%


