.home-who
  padding s(50,16) 0
  &__container
    display flex
    flex-direction row
    justify-content space-between
    width 100%
  &__bloc
    width 50%
    margin-right 10%
  &__bloc-text
    & p
      font-family 'opensans'
      font-weight: 300
      line-height: 2
      color $cBlue
      margin-bottom s(40,16)
  &__title
    &--icon
      &:before
        icon('iconWho')
        font-size s(30,35)
        margin-right s(20,30)
