.home-news
  &__background
    background-color $cBlue
    padding-bottom s(50,16)
  &__title
    padding s(50,35) 0
    &--icon
      &:before
        icon('iconNews')
        font-size s(30,35)
        margin-right s(20,30)
        color $cYellow
  &__container
    display flex
    flex-direction row
    justify-content space-between
    flex-wrap wrap
    width 100%
  &__bloc
    width 27.5%
    position relative
    color: $cBlue
  &__bloc-title
    font-family 'firasans'
    font-size s(20,16)
    font-weight:600
    margin-bottom s(5,20)
    min-height s(40,20)
  &__bloc-date
    font-family 'opensans'
    font-size s(16)
    font-weight:300
  &__bloc-text
    padding s(20,16) 0 s(30,16)
    font-weight: 300
    line-height 1.3
    min-height 155px
  &__infos
    background-color $cLightGrey
    text-align center
    border-radius 0 0 10px 10px
    padding s(40,16) s(20,16) s(30,16)
    position relative
  &__category
    position absolute
    top: -20px
    left:0
    right:0
    font-weight:500
    background-color $cYellow
    max-width 50%
    margin 0 auto
    border-radius 10px 0
    padding s(10,16) s(20,16)
  &__figure
    position relative
    &:before
      content ''
      position absolute
      top 0
      right 0
      left 0
      bottom 0
      width 100%
      height 100%
      background-color alpha($cBlue,0)
      border-radius 10px 10px 0 0
      transition .3s ease-in-out
  &__img
    width 100%
    display block
    border-radius 10px 10px 0 0
  &__bloc-link
    position: absolute
    top: 0
    left 0
    right 0
    bottom: 0
    display block
    width: 100%
    height 100%

.home-news__bloc:hover .home-news__figure:before
  background-color alpha($cBlue,0.5)
  transition .3s ease-in-out

