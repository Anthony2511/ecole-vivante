.learning-page
  padding s(50,16) 0
  &__container
    margin s(50,16) 0
  &__bloc
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    width 100%
    text-align right
  &__title-icon
    &:before
      font-size s(14,16)
      margin-right s(10,14)
      icon('iconTime')
      color $cBlue
  &__bloc + &__bloc
    margin-top s(30,16)
  &__bloc:nth-child(even)
    flex-direction row-reverse
    text-align left
  &__infos
    width 47.5%
  &__figure
    width 47.5%
  &__title
    font-size s(25,16)
    color $cBlue
    font-weight: 600
    font-family 'firasans'
    margin-bottom s(30,25)
    &:before
      color $cBlue
      icon ('iconUser')
      font-size s(20,25)
      margin-right s(10,20)
  &__text
    color $cBlue
    font-weight: 300
    line-height 1.6

@media screen and (max-width: 1300px)
  .learning-page
    padding s(50,16) s(20,16)

@media screen and (max-width: 1024px)
  .learning-page
    &__bloc
      flex-direction column
    &__bloc:nth-child(even)
      flex-direction column
    &__infos
      width 75%
    &__figure
      width 75%
    &__text
      margin-bottom s(30,16)

@media screen and (max-width: 768px)
  .learning-page
    &__infos
      width 100%
    &__figure
      width 100%

@media screen and (max-width: 650px)
  .learning-page
    &__container
      margin s(50,16) 0 0
    &__title
      font-size s(20,16)
    &__text
      font-size s(14,16)
