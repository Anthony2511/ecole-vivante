.job-page
  padding s(50,16) 0
  &__container
    color $cBlue
  &__title-icon
    &:before
      font-size s(14,16)
      margin-right s(10,14)
      icon('iconTeacher')
      color $cBlue
  &__intro
    font-weight: 300
    line-height 1.6
    width 50%
    margin s(50,16) auto 0
    text-align center
    & strong
      font-weight:600
  &__list
    counter-reset section
    width 75%
    margin s(50,16) auto
  &__item
    counter-increment section
    margin s(30,16) 0
    font-weight:300
    line-height 1.6
    &:before
      font-weight: 600
      font-size s(20,16)
      content counters(section, '.') '. '
  &__span
    font-size s(20,16)
    font-weight:600
  &__conclusion
    display flex
    flex-direction row
    justify-content space-between
    width 75%
    margin 0 auto s(50,16)
    position relative
    padding-top s(50,16)
    &:before
      position absolute
      content ''
      width 50%
      height 1px
      top: 0
      left 0
      right 0
      margin 0 auto
      display block
      background-color $cYellow
    & p
      width 47.5%
      font-weight:300
      line-height 1.6

@media screen and (max-width: 1300px)
  .job-page
    padding s(50,16) s(20,16)

@media screen and (max-width:1024px)
  .job-page
    &__intro
      width 75%
    &__list
      width 100%
    &__conclusion
      width 100%

@media screen and (max-width:768px)
  .job-page
    &__intro
      width 100%
    &__conclusion
      flex-direction column
      & p
        width 100%
