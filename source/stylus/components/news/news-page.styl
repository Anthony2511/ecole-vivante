.news-page
  padding 0 0 s(100,16)
  &__infos
    background-color $cBlue
    text-align center
    border-radius 0 0 10px 10px
    padding s(40,16) s(20,16) s(30,16)
    position relative
    color $cWhite
  &__title-icon
    margin s(50,35) 0
    &:before
      font-size s(14,16)
      margin-right s(10,14)
      icon('iconNews')
      color $cBlue
  &__category
    color $cBlue
  &__bloc
    margin-bottom s(50,16)

@media screen and (max-width: 1300px)
  .news-page
    padding 0 s(20,16) s(50,16)